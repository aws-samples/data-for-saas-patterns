{
    "Version": "2012-10-17",
    "Statement": [{
        "Effect": "Allow",
        "Principal": {
            "Service": "bedrock.amazonaws.com"
        },
        "Action": "sts:AssumeRole",
        "Condition": {
            "StringEquals": {
                "aws:SourceAccount": "#account_id#"
            },
            "ArnLike": {
                "AWS:SourceArn": "arn:aws:bedrock:#region_name#:#account_id#:knowledge-base/*"
            }
        }
    }]
}